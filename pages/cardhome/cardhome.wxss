page {
  background: rgb(253, 253, 253);
}

.help-info {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  overflow: auto;
} 

.home-bottom-layout {
  display: flex;
  flex-direction: row;
  margin-top: 66px;
  justify-content: space-around;
}

.bottom-image-left {
  width: 30px;
  height: 30px;
}

.bottom-image-center {
  margin-top: 16px;
  width: 35px;
  height: 35px;
}

.bottom-like-num {
  font-size: 28rpx;
  color: rgb(224, 11, 11);
}

.sharebtn {
  padding: 0;
  width: 30px;
  height: 30px;
  background-size: 30px 30px;
  background-repeat:no-repeat;
  display: flex;
  justify-content: center;
}

.swipe-card-container {
  width: 80%;
  height: 70%;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  perspective: 1000px;
  perspective-origin: center;
  transform-style: preserve-3d;
  backface-visibility: true;
}

.placeholder-0, .placeholder-1, .placeholder-2 {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
  background: #fff;
}

.placeholder-0 {
  transform: translate3d(0, 0, -1);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.placeholder-1 {
  transform: translate3d(0, 30rpx, -30rpx);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.placeholder-2 {
  transform: translate3d(0, 60rpx, -60rpx);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}
