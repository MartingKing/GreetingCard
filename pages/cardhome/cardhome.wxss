page {
  background: #fff;
  overflow-y: hidden;
}

.help-info {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  overflow: auto;
}

.home-bottom-layout {
  display: flex;
  flex-direction: column;
  margin-left: 32px;
  margin-right: 32px;
  margin-top: 30px;
}

.home-bottom-layout text{
  font-size: 26rpx;
  color:rgb(63, 63, 63) ;
}

.bottom-image-left {
  width: 30px;
  height: 30px;
}

.bottom-image-center {
  margin-top: 10px;
  width: 40px;
  height: 40px;
}

.bottom-like-num {
  font-size: 28rpx;
  color: rgb(224, 11, 11);
}

.sharebtn {
  padding: 0;
  width: 30px;
  height: 30px;
  background-size: 30px 30px;
  background-repeat: no-repeat;
  display: flex;
  justify-content: center;
}

.swipe-card-container {
  width: 83%;
  height: 70%;
  margin-top: 22px;
  margin-left: auto;
  margin-right: auto;
  position: relative;
  perspective: 1000px;
  perspective-origin: center;
  transform-style: preserve-3d;
  backface-visibility: true;
}

.placeholder-0, .placeholder-1, .placeholder-2 {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  position: absolute;
  background: #fff;
}

.placeholder-0 {
  transform: translate3d(0, 0, -1);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.placeholder-1 {
  transform: translate3d(0, 30rpx, -30rpx);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.placeholder-2 {
  transform: translate3d(0, 60rpx, -60rpx);
  box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.1);
}

.mp-swipe-card-item {
  height: 100%;
  width: 100%;
  padding: 20rpx;
  /* background: linear-gradient(to right bottom, red, orange, green, purple); */
}

.mp-swipe-card-item image {
  width: 93.5%;
  height: 95.3%;
  margin-right: 10px;
  margin-bottom: 10px;
}
