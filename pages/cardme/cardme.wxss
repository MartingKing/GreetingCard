page {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  background: #fff;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.marginView {
  margin-top: 30px;
}

.use_guide {
  padding: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.use_guide text {
  font-size: 30rpx;
}

.use_guide image {
  width: 30rpx;
  height: 30rpx;
}
