page {
  width: 100%;
  height: 100%;
}

.made-card-container {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.made-card-container-music {
  width: 40px;
  height: 40px;
  margin: 15px;
  align-self: flex-end;
}

.newyear-animation {
  align-self: center;
}

.greeting-words {
  font-size: 34rpx;
  font-style: initial;
  width: 220px;
  align-self: center;
  position: fixed;
  bottom: 0;
  display: flex;
  font-family: cursive;
  margin-bottom: 80px;
  color: #fff;
  line-height: 30px;
}

.made-card-container button {
  width: 120px;
  height: 40px;
  display: flex;
  background: rgb(228, 39, 39);
  position: fixed;
  margin-bottom: 30px;
  align-self: center;
  color: #fff;
  justify-content: center;
  bottom: 0;
}

