page {
  width: 100%;
  height: 100%;
}

.made-card-container {
  display: flex;
  height: 100%;
  flex-direction: column;
}

.made-card-container-music {
  width: 40px;
  height: 40px;
  padding: 10px;
  align-self: flex-end;
}

.newyear-animation {
  align-self: center;
}

.greeting-words {
  font-size: 36rpx;
  font-style: initial;
  width: 220px;
  align-self: center;
  font-family: cursive;
  line-height: 30px;
}

.made-card-container button {
  width: 120px;
  height: 40px;
  display: flex;
  background: rgb(228, 39, 39);
  position: fixed;
  border-radius: 20px;
  margin-bottom: 30px;
  align-items: center;
  align-self: center;
  color: #fff;
  justify-content: center;
  bottom: 0;
}

.textanimationcontainer {
  width: 220px;
  height: 300rpx;
  align-self: center;
  position: fixed;
  padding-left: 10px;
  bottom: 0;
  display: flex;
  margin-bottom: 90px;
  overflow: hidden;
}
