page {
  width: 100%;
  height: 100%;
}

.clayout {
  display: flex;
  flex-direction: column;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 68px;
}


.commentcontainer {
  margin-left: 12px;
  margin-right: 12px;
  background-color: #fff;
  display: flex;
  width: 95%;
  flex-direction: row;
  bottom: 0;
  position: fixed;
  padding-top: 10px;
  padding-bottom: 20px;
}

.commentcontainer input {
  display: flex;
  height: 30px;
  font-size: 30rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  border: 2rpx solid #ccc;
  border-radius: 3px;
  flex: 8;
}

.commentcontainer text {
  display: flex;
  height: 30px;
  border: 2rpx solid #ccc;
  background-color: rgb(211, 214, 214);
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-left: 10px;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  border-radius: 3px;
  flex: 2;
}

.commentlayout {
  display: flex;
  flex-direction: row;
}

.commenttextlayout {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  align-items: left;
}

.nickname {
  font-size: 26rpx;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  color: rgb(29, 29, 29);
}

.time {
  font-size: 26rpx;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  color: rgb(136, 134, 134);
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.commentcontent {
  font-size: 30rpx;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: rgb(158, 158, 158);
  margin-left: 50px;
}
.loading{
	text-align: center;
	color:#999;
	font-size:16px;
}