.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/

.drawer_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}

.drawer_title {
  margin-top: 15px;
  font-size: 32rpx;
  text-align: center;
  background-color: gazure;
}

.drawer_content {
  height: 180px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

.title {
  height: 30px;
  text-align: center;
  display: inline-block;
  font: 300 28rpx/30px "microsoft yahei";
}

.text {
  color: black;
}

.sureQuery {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: white;
}

.btn {
  width: 100%;
  padding: 10px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 32rpx;
  text-align: center;
  color: red;
}

.btn:active {
  width: 100%;
  padding: 10px;
  text-align: center;
  color: red;
  background-color: gray;
}

.btnSure {
  width: 100%;
  padding: 10px;
  background-color: gainsboro;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-size: 32rpx;
  text-align: center;
}

.titleMsg {
  font: 200 35rpx/30px;
  text-align: center;
  margin-top: 15px;
  display: block;
}

.input_base {
  padding-top: 3px;
  width: 90%;
  height: 70%;
  padding-bottom: 3px;
  font-size: 30rpx;
  display: block;
  background-color: white;
  margin-top: 5px;
  border: 2rpx solid #ccc;
  margin-right: 5%;
  border-radius: 3px;
  margin-left: 5%;
}
.quick-text {
  font-size: 30rpx;
  margin-left: 16px;
  margin-right: 10px;
  align-content: center;
  color: rgb(236, 89, 89);
  border-bottom: 1px rgb(223, 61, 61) solid;
  margin-bottom: 10px;
}